% chair options
\newcommand{\tumlang@define@chair}[5]
{
	\expandafter\def\csname#1nameenglish\endcsname{#3}
	\expandafter\def\csname#1namegerman\endcsname{#4}
	\addto\captionsenglish{\expandafter\def\csname#1name\endcsname{\csname#1nameenglish\endcsname}}
	\addto\captionsngerman{\expandafter\def\csname#1name\endcsname{\csname#1namegerman\endcsname}}
	\expandafter\def\csname#1head\endcsname{#5}
	\DeclareOption{#1}{
		\csname ds@#2\endcsname
		\def\chairname{\csname#1name\endcsname}
		\def\chairhead{\csname#1head\endcsname}
	}
}
