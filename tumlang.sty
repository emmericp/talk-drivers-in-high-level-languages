% general TUM option
\DeclareOption{TUM}{
	\def\TUMnameenglish{Technical University of Munich}
	\def\TUMnamegerman{Technische Universit\"at M\"unchen}
	\addto\captionsenglish{\def\TUMname{\TUMnameenglish}}
	\addto\captionsngerman{\def\TUMname{\TUMnamegerman}}
	\let\tumlang@departmentnameenglish\@undefined
	\let\tumlang@departmentnamegerman\@undefined
	\let\departmentlogo\@undefined
	\let\tumlang@chairnameenglish\@undefined
	\let\tumlang@chairnamegerman\@undefined
	\let\chairhead\@undefined
}

% department options
\newcommand{\tumlang@define@department}[3]
{
	\expandafter\def\csname#1nameenglish\endcsname{#2}
	\expandafter\def\csname#1namegerman\endcsname{#3}
	\addto\captionsenglish{\expandafter\def\csname#1name\endcsname{\csname#1nameenglish\endcsname}}
	\addto\captionsngerman{\expandafter\def\csname#1name\endcsname{\csname#1namegerman\endcsname}}
	\DeclareOption{#1}{
		\ds@TUM
		\def\departmentname{\csname#1name\endcsname}
		\def\departmentlogo{\csname#1Logo\endcsname}
	}
}
